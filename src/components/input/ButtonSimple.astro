---
import "./ButtonSimple.scss";
type Props = {
  id?: string;
  className?: string;
  title?: string;
  variant?: "outlined" | "contained";
  color?: "primary" | "secondary";
};

const {
  id,
  className = "",
  title = "",
  variant = "outlined",
  color = "primary",
} = Astro.props;

const variantClass = `button-simple--${variant}`;
const colorClass = `button-simple--${variant}-${color}`;
---

<button
  class={`button-simple ${variantClass} ${colorClass} ${className}`}
  id={id}
>
  <slot>{title}</slot>
</button>
