---
import BaseLayoutWithTitle from "@layouts/BaseLayoutWithTitle.astro";
import { getCollection } from "astro:content";

const pageTitle = "Contributors";

const contributors = await getCollection("contributors");
---

<BaseLayoutWithTitle pageTitle={pageTitle}>
  <h2>Contributors</h2>
  <ul>
    {
      contributors.map((contributor) => (
        <a
          href={`/contributors/${contributor.slug}`}
          title={contributor.data.name}
        >
          {contributor.data.name}
        </a>
      ))
    }
  </ul>
</BaseLayoutWithTitle>
